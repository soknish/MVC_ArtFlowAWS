@model List<Flower>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Artwork Commissions</h1>
    <a asp-action="AddData" class="btn btn-primary custom-btn-blue">
        <i class="fas fa-plus me-2"></i> Add New Commission
    </a>
</div>

<div class="commission-grid">
    @foreach (var item in Model)
    {
        <div class="commission-card shadow-sm">
            <div class="card-header">
                <h4 class="card-title">@item.ArtName</h4>

            </div>

            <p class="card-description">Art Type: @item.ArtType</p>

            <div class="card-details">
                <div class="detail-row">
                    <i class="fas fa-id-card-alt detail-icon"></i>
                    <span>Art ID: @item.ArtID</span>
                </div>

                <div class="detail-row">
                    <i class="fas fa-calendar-alt detail-icon"></i>
                    <span>Requested: @item.DateRequested.ToShortDateString()</span>
                </div>

                <div class="detail-row price-row">
                    <i class="fas fa-money-bill-wave detail-icon"></i>
                    <span class="price-value">@item.ArtPrice.ToString("C", new System.Globalization.CultureInfo("ms-MY"))</span>
                </div>
            </div>

            <div class="card-actions">
                <a asp-action="EditData" asp-controller="Flowers" asp-route-FlowerId="@item.ArtID" class="btn btn-sm btn-outline-primary w-50 me-2">
                    <i class="fas fa-edit"></i> Edit
                </a>

                <form asp-action="DeleteData" asp-controller="Flowers" asp-route-FlowerId="@item.ArtID" method="post" class="d-inline w-50">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-danger w-100"
                            onclick="return confirm('Are you sure you want to delete this Artwork @item.ArtID?');">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    }
</div>

