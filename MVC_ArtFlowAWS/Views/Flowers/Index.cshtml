@model List<Flower>

<h1>Artwork Commissions</h1>
<p><a asp-action="AddData">Add New Commission</a></p>

<table class="table table-hover table-striped table-bordered shadow-sm rounded">
    <thead class="table-primary">
        <tr style="background-color: aquamarine;">
            <th>Art ID</th>
            <th>Art Name</th>
            <th>Art Type</th>
            <th>Date Requested</th>
            <th>Art Price</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ArtID</td>
                <td>@item.ArtName</td>
                <td>@item.ArtType</td>
                <td>@item.DateRequested.ToShortDateString()</td>
                <td>@item.ArtPrice.ToString("C", new System.Globalization.CultureInfo("ms-MY"))</td> 

                <!-- Actions Column -->
                <td class="text-center text-nowrap">
                    <!-- Edit -->
                    <a asp-action="EditData" asp-controller="Flowers" asp-route-FlowerId="@item.ArtID" class="btn btn-sm btn-outline-primary me-2">
                        <i class="fas fa-edit"></i> Edit
                    </a>

                    <!-- Delete -->
                    <form asp-action="DeleteData" asp-controller="Flowers" asp-route-FlowerId="@item.ArtID" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Are you sure you want to delete Art ID @item.ArtID?');">
                            <i class="fas fa-trash"></i> Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>